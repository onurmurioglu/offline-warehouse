<mvc:View
   controllerName="sap.ui.warehouse.controller.Overview"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

   <Page title="{i18n>homePageTitle}" class= "custom-background">
      <headerContent>

       <Button
            icon="sap-icon://home" text="Anasayfa"
            press="onStockManage"
            />
         <Button
         text="Çıkış Yap"
            icon="sap-icon://log"
            press="onExit"/>
      </headerContent>
      <content>
      <VBox>
      <Button text="Yeni Ürün Ekle" press="onSaveBtn"  icon="sap-icon://sys-add"/>
       <HBox>
           
          <ToolbarSpacer/> 
           
         
             
               
            </HBox>
         <List
            id="list"
            items="{/products}"
            selectionChange=".onListItemPress">
            <StandardListItem           
               title="{title}"
               description="{description}"
               icon="{image}"
         />
         </List>
        </VBox>
        
      </content>
   </Page>
</mvc:View>
